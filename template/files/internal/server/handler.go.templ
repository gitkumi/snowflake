package server

import (
	"net/http"

	"github.com/gin-gonic/gin"
	{{ if eq .Type "web" }}"github.com/gitkumi/acme/internal/pages"{{ end }}
)

{{ if eq .Type "web" }}func (app *application) home(c *gin.Context) {
	c.HTML(http.StatusOK, "", pages.Home())
}{{ end }}

func (app *application) health(c *gin.Context) {
	err := app.db.Ping()

	if err != nil {
		c.JSON(http.StatusInternalServerError, gin.H{
			"message": err,
		})
		return
	}

	c.JSON(http.StatusOK, gin.H{
		"message": "OK",
	})
}
