func TestCreateBook(t *testing.T) {
	ts, _ := test.Init()

	testCases := []struct {
		name       string
		input      handler.CreateBookInput
		statusCode int
	}{
		{
			name: "Valid Book",
			input: handler.CreateBookInput{
				Title:  "Test Book",
				Author: "Test Author",
				ISBN:   "1234567890",
				Genre:  "Fiction",
			},
			statusCode: http.StatusCreated,
		},
		{
			name: "Missing Title",
			input: handler.CreateBookInput{
				Author: "Test Author",
				ISBN:   "1234567890",
				Genre:  "Fiction",
			},
			statusCode: http.StatusBadRequest,
		},
	}

	for _, tc := range testCases {
		t.Run(tc.name, func(t *testing.T) {
			jsonValue, _ := json.Marshal(tc.input)

			rr := httptest.NewRecorder()
			req, _ := http.NewRequest("POST", "/api/books", bytes.NewBuffer(jsonValue))
			req.Header.Set("Content-Type", "application/json")

			ts.Application.Router.ServeHTTP(rr, req)

			if rr.Code != tc.statusCode {
				t.Fatalf("Expected %d got %d", rr.Code, tc.statusCode)
			}

			var response struct {
				Data map[string]any `json:"data"`
			}
			if err := json.Unmarshal(rr.Body.Bytes(), &response); err != nil {
				t.Fatalf("Unable to parse response: %v", err)
			}
		})
	}
}

