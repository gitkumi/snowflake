-- name: ListBooks :many
SELECT * FROM books
ORDER BY id;

-- name: GetBook :one
SELECT * FROM books
WHERE id = ? LIMIT 1;

-- name: CreateBook :one
INSERT INTO books (
  title, author, isbn, genre
) VALUES (
  ?, ?, ?, ?
)
RETURNING *;

-- name: UpdateBook :one
UPDATE books
SET title = ?,
    author = ?,
    isbn = ?,
    genre = ?
WHERE id = ?
RETURNING *;

-- name: DeleteBook :exec
DELETE FROM books
WHERE id = ?;
