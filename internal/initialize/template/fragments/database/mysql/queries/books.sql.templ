-- name: ListBook :many
SELECT * FROM books
ORDER BY created_at DESC
LIMIT ?
OFFSET ?;

-- name: CountBooks :one
SELECT COUNT(*) AS count FROM books;

-- name: GetBook :one
SELECT * FROM books
WHERE id = ? LIMIT 1;

-- name: CreateBook :execresult
INSERT INTO books (
  title, author, isbn, genre
) VALUES (
  ?, ?, ?, ? 
);

-- name: UpdateBook :exec
UPDATE books
SET title = ?,
    author = ?,
    isbn = ?,
    genre = ?
WHERE id = ?;

-- name: DeleteBook :exec
DELETE FROM books
WHERE id = ?;
